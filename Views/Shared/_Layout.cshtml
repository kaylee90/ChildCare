@Scripts.Render("~/Scripts/Site.js")
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("We Care Child Care", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About US", "About", "Home")</li>
                    
                   
                    @if (Session["UserName"] != null)
                    {
                        if ((Int64)Session["RoleID"] >= 1)
                        {
                           <li>@Html.ActionLink("View Parents", "ViewAllParents", "Parent")</li>
                           <li>@Html.ActionLink("New Parent", "CreateAParent", "Parent")</li>
                           <li>@Html.ActionLink("View Children", "ViewAllChildren", "Child")</li>
                           <li>@Html.ActionLink("New Child", "CreateAChild", "Child")</li>
                        }
                        else
                        {
                        }
                        if ((Int64)Session["RoleID"] >= 2)
                        { 
                           <li>@Html.ActionLink("View User", "ViewAllUsers", "Account")</li>
                        }
                        else
                        {
                        }
                    }
                    else
                    {
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Username"] != null)
                    {
                        <li>@Html.ActionLink(Session["FirstName"].ToString(), "#", "#")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
